    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.525.0",
    "next": "^15.4.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
