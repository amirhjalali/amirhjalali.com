{
  "name": "amirhjalali-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && cp -r public .next/standalone/ && cp -r .next/static .next/standalone/.next/",
    "start": "HOSTNAME=\"0.0.0.0\" node .next/standalone/server.js",
    "lint": "next lint",
    "analyze": "ANALYZE=true next build",
    "clean": "rm -rf .next node_modules",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,css,md}\"",
    "generate:published": "node scripts/generate-published-json.mjs",
    "test": "echo \"No tests configured\"",
    "prepare": "echo \"Preparing project...\"",
    "postinstall": "prisma generate && echo \"Installation complete!\""
  },
  "dependencies": {
